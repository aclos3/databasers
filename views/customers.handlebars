<div style="padding-left:16px">
  <h2>Tropical Fish Emporium</h2>
    <p>Search for and delete customers here.</p>

  <form method ="GET" action ="/customers">
    <fieldset>
      <legend>Manage Customers:</legend>
  			<label>First Name:
          <input type ="text" name ="firstName">
        </label><br><br>
  			<label>Last Name:
          <input type ="text" name ="lastName">
        </label><br><br>
  			<label>E-mail Address:
          <input type ="text" name ="email">
          </label><br><br>
  			<!--<label>Membership Start-Date:
          <input type ="date" name ="memberSince">
        </label><br><br> -->
        <input name ="custSearch" id="custSearch" value="Search" type="submit"/>

    </fieldset>
  </form>

  {{#if custs}}
    <table>
      <tr>
        <th>Delete</th>
        <th class="pk">customerId</th>
        <th>email</th>
        <th>memberSince</th>
        <th>firstName</th>
        <th>lastName</th>
      </tr>
      {{#each custs}}
      <tr>
        <td>
          <input type="button" name="delete" value="Delete" onClick="delCust({{this.id}})">
        <td>{{this.id}}</td>
        <td>{{email}}</td>
        <td>{{memberSince}}</td>
        <td>{{fName}}</td>
        <td>{{lName}}</td>
      </tr>
      {{/each}}
    </table>
  {{else}}
    <div class="warnText">No Customers Returned<br><br></div>
  {{/if}}

</div>
