        <th>email</th>
        <th>memberSince</th>
        <th>firstName</th>
        <th>lastName</th>
      </tr>
      {{#each custs}}
      <tr>
        <td><input type="button" name="custDelete" value="Delete" onClick="delCust({{this.id}})"></td>
        <td>{{id}}</td>
        <td>{{email}}</td>
        <td>{{memberSince}}</td>
