 <form id="exerciseEntry"> 
    <fieldset  class="defaultText"> 
      <legend class="title">Create a new exercise:</legend>  
      <div class="container">  <!-- container is for style purposes -->
        Exercise Type<input type="text" name="exerciseType" id="exerciseType" class="defaultText"><br>  
        Repetitions<input type="number" name="reps" id="reps" class="defaultText"><br> 
        Weight<input type="number" name="weight" id="weight" class="defaultText"><br>
        Date<input type="date" name="date" id="date" class="defaultText"><br>
        Lbs<input type="radio" name="unit" id="lbs" value="lbs" checked="checked" class="defaultText">
        Kg<input type="radio" name="unit" id="kg" value="kgs" class="defaultText">
        <input type="submit" name="Add to Database" value = "Add Exercise" id="submitEx" class="defaultText">
      </div>
    </fieldset>
  </form><br>

  <table id="exerciseTable"  class="defaultText">
    <tr> 
		<!--Set up the table headings -->
        <th>Exercise Type</th><th>Repetitions</th><th>Weight</th><th>Date</th><th>Unit</th><th>Update</th><th>Delete</th>
    </tr>
<!-- javascript/express handlebars will populate these fields -->
    {{#if workouts}}
        {{#each workouts}}
            <tr>
                <td>{{this.name}}</td><td>{{this.reps}}</td><td>{{this.weight}}</td><td>{{this.date}}</td><td>{{this.unit}}</td>
                <td><a href="/refreshExercise?id={{this.id}}">
				<input type="button" value="Update Exercise"  class="defaultText"></a>
				</td>
                <td>
                    <input type="button" class="defaultText" name="delete" value="Delete" onClick="delRow('exerciseTable',{{this.id}})">
                    <input type="hidden" class="defaultText" id="delete{{this.id}}">
                </td>
            </tr>
        {{/each}}
    {{/if}}
  </table>
